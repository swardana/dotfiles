[core]
    excludesfile = ~/.gitignore
    editor = nvim
    pager = less -FRX
[init]
    defaultBranch = master
[color]
    status = auto
    diff = auto
    branch = auto
    interactive = auto
    grep = auto
    ui = auto
[pull]
    default = simple
    ff = only
[push]
    default = current
[rerere]
    enabled = true
[diff]
    tool = nvimdiff
[difftool]
    prompt = false
[mergetool]
    prompt = false
    keepBackup = false
[branch "master"]
    remote = origin
    merge = refs/head/master
[alias]
    last = log -1
    tree = log --graph --oneline --all
